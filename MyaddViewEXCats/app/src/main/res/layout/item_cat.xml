<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/catImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/teal_200" />

    <TextView
        android:id="@+id/catNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="냐옹이1"
        app:layout_constraintBottom_toTopOf="@id/catFamilyTextView"
        app:layout_constraintStart_toEndOf="@id/catImageView"
        app:layout_constraintTop_toTopOf="@id/catImageView"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/catFamilyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="가격 2000원"
        app:layout_constraintBottom_toTopOf="@id/phoneTextView"
        app:layout_constraintStart_toEndOf="@id/catImageView"
        app:layout_constraintTop_toBottomOf="@id/catNameTextView" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/catImageView"
        app:layout_constraintStart_toEndOf="@id/catImageView"
        app:layout_constraintTop_toBottomOf="@id/catFamilyTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>